@using TMCP.Models.ViewModel
@model ManageRolesViewModel

<h2>Manage Roles for @Model.Email</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />

    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                        @Model.Roles[i].RoleName
                    </td>
                    <td>
                        <input type="radio" asp-for="SelectedRoleId" value="@Model.Roles[i].RoleId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>